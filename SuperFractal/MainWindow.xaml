<mah:MetroWindow x:Class="SuperFractal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:SuperFractal"
        xmlns:views="clr-namespace:SuperFractal.Views"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="Super Fractal" Height="450" Width="800">
    <Grid Margin="0" HorizontalAlignment="Stretch">
        <views:SceneView HorizontalAlignment="Stretch" DataContext="{Binding CurrentViewModel}"></views:SceneView>
    </Grid>
</mah:MetroWindow>
